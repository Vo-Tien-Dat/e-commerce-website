<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="CHỌN MÀN HÌNH"
        android:gravity="center"
        android:textSize="36dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="#4E85D7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:layout_constraintVertical_bias="0.425"
        android:layout_marginTop="150dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnChonKhongHang"
            android:layout_width="180dp"
            android:layout_height="54dp"
            android:text="Giỏ hàng trống"
            android:backgroundTint="#4E85D7"/>

        <Button
            android:id="@+id/btnChonCoHang"
            android:layout_width="180dp"
            android:layout_height="54dp"
            android:text="Giỏ có hàng"
            android:backgroundTint="#4E85D7"/>

        <Button
            android:id="@+id/btnChonNotLogin"
            android:layout_width="180dp"
            android:layout_height="54dp"
            android:text="Chưa đăng nhập"
            android:backgroundTint="#D9534F"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sản phẩm giữa kỳ"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>